@model DbModel.Location.Work.OperationItem

@{
    ViewBag.Title = "EditItem";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        span {
            display: inline-block;
            width: 200px;
            text-align: right;
        }
    </style>
    <title>EditItem</title>
</head>
<body>
    <h2>EditItem</h2>
    <form action="/OperationTicket/EditItem2">
        <input type="hidden" name="Id" value=@Model.Id />
        <input type="hidden" name="TicketId" value=@Model.TicketId />
        <span>操作时间：</span><input type="datetime-local" name="OperationTime" value=@Model.OperationTime.ToString("yyyy-MM-ddThh:mm:ss") /><br/>
        <span>记号：</span><input type="checkbox" name="Mark" value="true" /><br />
        <span>顺序：</span><input type="text" name="OrderNum" value=@Model.OrderNum /><br />
        <span>操作项目：</span><input type="text" name="Item" value=@Model.Item /><br />
        <input type="submit" value="Save" /> |
        <a href="/OperationTicket/Edit/@Model.TicketId">返 回</a>
    </form>
</body>
</html>