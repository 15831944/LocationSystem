@using DbModel.Location.Work
@model DbModel.Location.Work.PatrolPointItem

@{
    ViewBag.Title = "Clock";
}

<h2>Clock</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>打卡</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.KksCode)
        @Html.HiddenFor(model => model.CheckItem)
        @Html.HiddenFor(model => model.StaffCode)
        @Html.HiddenFor(model => model.ParentId)

        <div class="form-group">
            @Html.LabelFor(model => model.CheckResult, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckResult, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CheckResult, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确定" class="btn btn-default" />
            </div>
        </div>
    </div>

    <div>
        <a href="/InspectionTrack/EditPoint/@Model.ParentId">返 回</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

