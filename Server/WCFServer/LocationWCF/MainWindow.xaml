<Window xmlns:WPFClientControlLib="clr-namespace:WPFClientControlLib;assembly=WPFClientControlLib"  x:Class="LocationWCFServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocationWCFServer"
        mc:Ignorable="d"
        Title="服务端" Height="500" Width="1000" Loaded="MainWindow_OnLoaded">
    <Grid>
        <TabControl>
            <TabItem Header="服务" Height="21" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="1">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Label>Host:</Label>
                            <TextBox Width="200" Name="TbHost" VerticalContentAlignment="Center">localhost</TextBox>
                            <Label>Port:</Label>
                            <TextBox Width="50" Name="TbPort" VerticalContentAlignment="Center">8733</TextBox>
                            <Button Name="BtnStartService" Click="BtnStartService_Click" Content="启动服务" Margin="2"></Button>
                        </StackPanel>
                       
                        <TextBox Name="TbResult1" Grid.Row="1" Height="100"></TextBox>
                        <Button Name="BtnOpenSimulator" Content="打开定位模拟器" Click="BtnOpenSimulator_OnClick"></Button>
                        <Button Name="BtnConnectEngine" Content="连接定位引擎" Click="BtnConnectEngine_Click"></Button>
                        <Button Name="BtnOpenU3D" Content="打开三维定位程序" Click="BtnOpenU3D_OnClick"></Button>
                        
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <ScrollViewer>
                            <TextBox Name="TbResult2"></TextBox>
                        </ScrollViewer>
                        <ScrollViewer  Grid.Column="1" Grid.Row="0">
                            <TextBox Name="TbResult3"></TextBox>
                        </ScrollViewer>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="定位" Height="21" VerticalAlignment="Top" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="模拟标签倍数"></TextBox>
                            <TextBox Name="TbMockTagPowerCount0" Text="0"></TextBox>

                            <Button Name="BtnStopConnectEngine" Content="停止" Click="BtnStopConnectEngine_OnClick"></Button>
                            <Button Name="BtnNewDb" Content="新建Db" Click="BtnNewDb_OnClick"></Button>

                            <TextBox Name="TbTimer" Text="0:0:0:0"></TextBox>
                            <TextBox x:Name="textBox_U3DTEST" Height="23" TextWrapping="Wrap" Width="256"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="模拟位置数量"></TextBox>
                            <TextBox Name="TbMockCount1" Text="500"></TextBox>
                            <Button Name="BtnTestInsertData" Click="BtnTestInsertData_OnClick" Content="测试插入大量数据1"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="标签倍数"></TextBox>
                            <TextBox Name="TbMockTagPowerCount" Text="100"></TextBox>
                            <TextBox Text="位置倍数"></TextBox>
                            <TextBox Name="TbMockPosPowerCount" Text="100"></TextBox>
                            <Button Name="BtnTestInsertData2" Click="BtnTestInsertData2_OnClick" Content="一次测试插入大量数据"></Button>
                            <Button Name="BtnTestInsertData3" Content="持续测试插入大量数据" Click="BtnTestInsertData3_OnClick"></Button>
                        </StackPanel>
                        <Button Name="BtnGeneratePosition" Content="开始产生位置信息" Click="BtnGeneratePosition_OnClick"></Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="定位告警">
                <StackPanel>
                    <Button Content="推送告警" Name="BtnPushAlarm" Click="BtnPushAlarm_OnClick"></Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="设备告警">
                <WPFClientControlLib:DeviceListBox x:Name="DeviceListBox1" Loaded="DeviceListBox1_Loaded" >
                </WPFClientControlLib:DeviceListBox>
            </TabItem>
            <TabItem Header="SignalRClients">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                        <Label>Message:</Label>
                        <TextBox Name="TbMessage" Width="200"></TextBox>
                        <Button Name="BtnSendMessage" Click="BtnSendMessage_OnClick">SendMessage</Button>
                    </StackPanel>
                    <RichTextBox></RichTextBox>
                </DockPanel>

            </TabItem>
            <TabItem Header="定位数据">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <Button Name="BtnGetHistoryList" Click="BtnGetHistoryList_OnClick">获取历史轨迹</Button>
                        <Button Name="BtnCreateHistoryPos" Click="BtnCreateHistoryPos_OnClick">创建模拟历史数据</Button>
                    </StackPanel>
                    <DataGrid Name="DataGridHistoryPosList"></DataGrid>
                </DockPanel>
                
            </TabItem>
            <TabItem Header="门禁信息推送">
                <WPFClientControlLib:DoorAccessListBox x:Name="DoorAccessListBox1"   Margin="0,20,0,0">
                </WPFClientControlLib:DoorAccessListBox>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
