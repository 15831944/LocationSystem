                <MenuItem Header="清空设备告警" Name="MenuClearDevAlarms" Click="MenuClearDevAlarms_Click"></MenuItem>
                <MenuItem Header="生成设备告警" Name="MenuGenerateDevAlarms" Click="MenuGenerateDevAlarms_Click"></MenuItem>
