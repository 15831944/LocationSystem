<UserControl x:Class="ArchorUDPTool.UDPArchorInfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArchorUDPTool"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="186*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Label Name="LbLabel" Grid.Column="0">Key</Label>
        <TextBox Name="TbValue" Grid.Column="1"></TextBox>
        <Button Name="BtnGet" Grid.Column="2" Click="BtnGet_Click">Get</Button>
        <Button Name="BtnSet" Grid.Column="3" Click="BtnSet_Click">Set</Button>
    </Grid>
</UserControl>
