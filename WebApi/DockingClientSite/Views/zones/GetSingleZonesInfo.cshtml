@using CommunicationClass.SihuiThermalPowerPlant
@using CommunicationClass.SihuiThermalPowerPlant.Models
@model CommunicationClass.SihuiThermalPowerPlant.Models.zone

<!DOCTYPE html>
<html>
<head>
    <style>
        span {
            display: inline-block;
            width: 200px;
            text-align: right;
        }
    </style>
    <title>GetSingleZonesInfo</title>
</head>
<body>
    <h2>GetSingleZonesInfo</h2>
    <table class="table">
        <caption style="text-align:left">区域信息</caption>
        <tr>
            <th>标识</th>
            <th>名称</th>
            <th>KKS编码</th>
            <th>说明</th>
            <th>x坐标</th>
            <th>y坐标</th>
            <th>z坐标</th>
            <th>父ID</th>
            <th>级联关系</th>
        </tr>
        <tr>
            <td>@Model.id</td>
            <td>@Model.name</td>
            <td>@Model.kksCode</td>
            <td>@Model.description</td>
            <td>@Model.x</td>
            <td>@Model.y</td>
            <td>@Model.z</td>
            <td>@Model.parent_id</td>
            <td>@Model.path</td>
        </tr>
    </table>
    <table class="table">
        <caption style="text-align:left">子区域列表</caption>
        <tr>
            <th>标识</th>
            <th>名称</th>
            <th>KKS编码</th>
            <th>说明</th>
            <th>x坐标</th>
            <th>y坐标</th>
            <th>z坐标</th>
            <th>父ID</th>
            <th>级联关系</th>
        </tr>
        @foreach (zone item in Model.zones)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.kksCode</td>
                <td>@item.description</td>
                <td>@item.x</td>
                <td>@item.y</td>
                <td>@item.z</td>
                <td>@item.parent_id</td>
                <td>@item.path</td>
            </tr>
        }
    </table>
    <table class="table">
        <caption style="text-align:left">关联设备列表</caption>
        <tr>
            <th>标识</th>
            <th>名称</th>
            <th>KKS编码</th>
        </tr>
        @foreach (device item in Model.devices)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.kksCode</td>
            </tr>
        }
    </table>
</body>
</html>





