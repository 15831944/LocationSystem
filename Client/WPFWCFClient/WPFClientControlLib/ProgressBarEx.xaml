<UserControl x:Class="WPFClientControlLib.ProgressBarEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClientControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
            <ProgressBar Name="ProgressBar1" Value="20"></ProgressBar>
        <Label VerticalAlignment="Center" Content="{Binding ElementName=ProgressBar1,Path=Value}" HorizontalAlignment="Center"></Label>
        <Label Name="LbTimer" Content="00:00:00" VerticalAlignment="Center"></Label>
    </Grid>
</UserControl>
