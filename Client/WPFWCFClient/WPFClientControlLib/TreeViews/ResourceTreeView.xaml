<UserControl x:Class="WPFClientControlLib.ResourceTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClientControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl>
            <TabItem Header="区域树">
                <local:TopoTreeView x:Name="TopoTreeView1"/>
            </TabItem>
            <TabItem Header="人员树">
                <local:PersonTreeView x:Name="PersonTreeView1"/>
            </TabItem>
            <TabItem Header="组织机构">
                <local:DepTreeView x:Name="DepTreeView1"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
