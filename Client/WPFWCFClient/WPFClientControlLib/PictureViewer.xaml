<UserControl x:Class="WPFClientControlLib.PictureViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClientControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Right" Name="BtnDeleteFile" Click="BtnDeleteFile_OnClick">删除文件</Button>
            <Button DockPanel.Dock="Right" Name="BtnOpenDir" Click="BtnOpenDir_OnClick">打开目录</Button>
            <Button DockPanel.Dock="Right" Name="BtnNext" Click="BtnNext_OnClick">下一页</Button>
            <Button DockPanel.Dock="Right" Name="BtnPre" Click="BtnPre_OnClick">上一页</Button>

            <Label DockPanel.Dock="Right" Name="LbState"></Label>
            <TextBox Name="TbPath"></TextBox>

        </DockPanel>
        <Image Name="Image1"></Image>
        <MediaElement Name="MediaElement1"/>
    </DockPanel>
</UserControl>
